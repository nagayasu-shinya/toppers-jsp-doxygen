#
#   Makefile のプロセッサ依存部（Xstormy16用）
#

#
#  ターゲットアーキテクチャの定義
#
TARGET = xstormy16-elf

#
#  コンパイルオプション
#
INCLUDES := $(INCLUDES) -I$(CONFIGDIR)/$(CPU)
#     デバッグ時には、-O0や-Wallを指定することで、コンパイル時や
#     やEVAデバッガ中で、より詳細な情報を取得することができます。
#COPTS := $(COPTS) -g -O0 -Wall
#     デバッグ終了後は、-DNDEBUGを指定することで、カーネル中から
#     デバッグのためのコードを取り除くことができます。(user.txt参照)
COPTS := $(COPTS) -g -O2 
CDEFS := $(CDEFS) -DNDEBUG

#
#  カーネルに関する定義
#
KERNEL_DIR := $(KERNEL_DIR):$(CONFIGDIR)/$(CPU)
KERNEL_ASMOBJS := $(KERNEL_ASMOBJS) cpu_support.o
KERNEL_COBJS := $(KERNEL_COBJS) cpu_config.o hw_serial.o hw_timer.o cpu_stdio.o

#
#  スタートアップモジュールに関する定義
#
START_OBJS = start.o

$(START_OBJS): %.o: %.S
	$(CC) -c $(CFLAGS) $(KERNEL_CFLAGS) $<

$(START_OBJS:.o=.d): %.d: %.S
	@$(PERL) $(SRCDIR)/utils/makedep -C $(CC) \
		-O "$(CFLAGS) $(KERNEL_CFLAGS)" $< >> Makefile.depend

#
#  アセンブラからCの構造体にアクセスするためのoffset.hを依存部で用意
#
OMIT_MAKEOFFSET = YES

#
#  実行ファイルの拡張子の指定
#
OBJEXT = elf

#
#  開発環境の指定
#
DEVENV := EVA_DEBUGGER

